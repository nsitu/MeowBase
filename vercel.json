{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.4.0"
    }
  },
  "rewrites": [
    { "source": "/styles.css", "destination": "/public/styles.css" },
    { "source": "/icon.png", "destination": "/public/icon.png" },
    { "source": "/images/(.*)", "destination": "/public/images/$1" },
    { "source": "(.*)",  "destination": "/api/index.php" }
  ]
}
